<section id="about" class="wrapper style2 special section-features">
  <div class="container 125%">
    <header class="major">
      <h2>{{ shortcode.section.header|raw }}</h2>
    </header>
    <div class="row">
      <div class="4u 12u$(medium)">
        <div class="card">
          <div class="card-block">
            {% set image_a = 'theme://images/' ~ shortcode.section.a_image|striptags %}
            <div class="image">
              <img src="{{ url(image_a) }}" alt="{{ shortcode.section.a_title|striptags }}" />
            </div>
            <h4 class="card-title">{{ shortcode.section.a_title|raw }}</h4>
            <h6 class="card-subtitle text-muted">{{ shortcode.section.a_subtitle|raw }}</h6>
            <p class="card-text">{{ shortcode.section.a_text|raw}}</p>
          </div>
        </div>
      </div>
      <div class="4u 12u$(medium)">
        <div class="card">
          <div class="card-block">
            {% set image_b = 'theme://images/' ~ shortcode.section.b_image|striptags %}
            <div class="image">
              <img src="{{ url(image_b) }}" alt="{{ shortcode.section.b_title|striptags }}" />
            </div>
            <h4 class="card-title">{{ shortcode.section.b_title|raw }}</h4>
            <h6 class="card-subtitle text-muted">{{ shortcode.section.b_subtitle|raw }}</h6>
            <p class="card-text">{{ shortcode.section.b_text|raw }}</p>
          </div>
        </div>
      </div>
      <div class="4u$ 12u$(medium)">
        <div class="card">
          <div class="card-block">
            {% set image_c = 'theme://images/' ~ shortcode.section.c_image|striptags %}
            <div class="image">
              <img src="{{ url(image_c) }}" alt="{{ shortcode.section.c_title|striptags }}" />
            </div>
            <h4 class="card-title">{{ shortcode.section.c_title|raw }}</h4>
            <h6 class="card-subtitle text-muted">{{ shortcode.section.c_subtitle|raw }}</h6>
            <p class="card-text">{{ shortcode.section.c_text|raw }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>  
</section>
